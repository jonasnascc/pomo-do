<h1 id="logo">Pomodo</h1>
<form id="add-task-form" method="POST" action="/tasks">
    <label id="add-task-label" for="task-desc">Type a new task: </label>
    <input 
        type="text" 
        name="description" 
        id="task-desc"
    />
    
    <label id="add-task-label" for="task-pomos">Pomodoros: </label>
    <input 
        type="number" 
        name="pomodoros" 
        id="task-pomos"
    />

    <label for="taskgroup">Select group</label>
    
    {{#if taskgroups}}
        <select name="taskgroupId" id="taskgroup">
            {{#each taskgroups}}
                {{> taskgroup}}
            {{/each}}
        </select>
    {{else}}
        <p>No task groups found.</p>
    {{/if}}
    <a href="/tasks/groups/create">Add new task group</a>

    <button type="submit">Save task</button>
</form>
<hr/>

{{#if tasks}}
<h2>Tasks</h2>
<form id="search-task-form" method="GET" action="/tasks">
    <label for="task-id">Search by id: </label>
    <input
        id="task-id"
        name="id"
        type="number"
    />
    {{#if taskgroups}}
        <label for="taskgroupId">Search by group: </label>
        <select name="taskgroupId" id="taskgroup">
            <option value="">None</option>
            {{#each taskgroups}}
                {{> taskgroup}}
            {{/each}}
        </select>
    {{/if}}
    <button type="submit">search</button>
</form>
<div id="current-tasks">
    {{#each tasks}}
        {{> task}}
    {{/each}}
</div>
{{else}}
<div>No tasks found.</div>
{{/if}}