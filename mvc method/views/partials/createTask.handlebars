<div id="tasksModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title task-modal-title">Create Task</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
            <form class="create-task-form" action="/tasks/add" method="POST">
                <div class="modal-body">
                    <div class="task-input title-input">
                        <label for="title">Title:</label>
                        <input type="text" name="title" placeholder="Type the task's title">
                    </div>
                    <div class="task-input description-input">
                        <label for="description">Description:</label>
                        <textarea 
                            type="text" 
                            name="description" 
                            placeholder="Describe the task"
                            minlength="1"
                            maxlength="255"
                            rows="3"
                        ></textarea>
                    </div>
                    <div class="pomodoros-input">
                        <label for="pomodoros">How many pomodoros it takes?</label>
                        <input
                            type="number"
                            name="pomodoros"
                            placeholder="Type here"
                        />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">
                        Create <i class="bi bi-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    </div>