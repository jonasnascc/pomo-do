<div class="row">
    <div class="col creation-col">
        <h1 class="create-task-title">Create Task</h1>
        <form class="create-task-form" action="/tasks/add" method="POST">
            <div class="task-input title-input">
                <label for="title">Title:</label>
                <input type="text" name="title" placeholder="Type the task's title">
            </div>
            <div class="task-input description-input">
                <label for="description">Description:</label>
                <textarea type="text" name="description" placeholder="Describe the task"></textarea>
            </div>
            <div class="create-btn">
                <button class="btn btn-primary" type="submit">
                    Create <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </form>
    </div>
    <div class="col tasks-col">
        <ul class="task-list">
            {{#each tasks}}
                {{> taskcard}}
            {{/each}}
        </ul>
    </div>
    <div class="col"></div>

</div>